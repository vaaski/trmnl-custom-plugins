<div class="layout">
	<div class="columns">
		{% for column in columns %}
			<div class="column markdown">
				<span class="title">{{ column.title }}</span>

				{% for item in column.items %}
					<div class="item ml--{{ item.depth | times: 5 }} {% if item.checked %}text--gray-4{% endif %}">
						<div class="meta"></div>
						<div class="content">
							<span class="clamp--3" style="word-break: break-word;">{{ item.content }}</span>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	</div>
</div>

<div class="title_bar">
	<img class="image" src="{{ trmnl.plugin_settings.custom_fields_values.icon_url }}" />
	<span class="title">Obsidian Daily</span>
	<span class="instance">{{ date }}</span>
</div>
